@model Microsoft.AspNetCore.Identity.IdentityUser
<link rel="stylesheet" href="~/css/St&MngCr&RsPass.css" />

<div class="form-container">
    <h2>Reset Password for @Model.Email</h2>

    @if (TempData["Error"] != null)
    {
        <div class="error">@TempData["Error"]</div>
    }

    <form asp-action="ResetPassword" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <label>New Password</label>
            <input name="newPassword" type="password" required />
        </div>
        <div>
            <label>Confirm Password</label>
            <input name="confirmPassword" type="password" required />
        </div>
        <button type="submit">Reset</button>
        <a asp-action="Index" class="btn-link">Cancel</a>
    </form>
    <a asp-controller="CoffeeShopAdmin" asp-action="Index" class="btn-link back-button">⬅ Back</a>
</div>
