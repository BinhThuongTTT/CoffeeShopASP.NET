@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/St&MngMngm.css">

<h2>Manager Management</h2>

@if (TempData["Success"] != null)
{
    <div class="toast">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="toast error">@TempData["Error"]</div>
}

<form asp-action="Index" method="get" class="management-search">
    <input name="search" value="@ViewBag.Search" placeholder="Search by email or ID" />
    <button type="submit">Search</button>
</form>

<a asp-action="Create" class="add-button">+ Add Manager</a>

<table class="management-table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td class="management-actions">
                        <form asp-action="DeleteConfirmed" method="post" style="display:inline"
                              onsubmit="return confirm('Are you sure you want to delete this manager?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit">Delete</button>
                        </form>
                        <span class="separator">|</span>
                        <a asp-action="ResetPassword" asp-route-id="@user.Id">Reset Password</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" style="text-align:center; color:gray;">No manager found</td>
            </tr>
        }
    </tbody>
</table>
<br>
<a asp-controller="CoffeeShopAdmin" asp-action="Index" class="back-button">⬅ Back</a>
