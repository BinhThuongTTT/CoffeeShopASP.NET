@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/St&MngCr&RsPass.css" />

<div class="form-container">
    <h2>Create User</h2>
    @if (TempData["Error"] != null)
    {
        <div class="error">@TempData["Error"]</div>
    }
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div>
            <label>Email</label>
            <input name="email" type="email" required />
        </div>
        <div>
            <label>Password</label>
            <input name="password" type="password" required />
        </div>
        <button type="submit">Create</button>
        <a asp-action="Index" class="btn-link">Cancel</a>
    </form>
    <a asp-controller="CoffeeShopAdmin" asp-action="Index" class="btn-link back-button">⬅ Back</a>
</div>
