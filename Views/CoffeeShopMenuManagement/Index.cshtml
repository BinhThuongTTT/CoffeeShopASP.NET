@model List<CoffeeShopWeb.Models.Product>

<link rel="stylesheet" href="~/css/St&MngProd&Res.css" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Menu Management</h2>

@if (TempData != null && TempData["Success"] != null)
{
    <div class="toast success">@TempData["Success"]</div>
}
<a asp-action="Create" class="add-button">+ Add Product</a>

<form asp-action="Search" method="get" class="search">
    <input name="search" value="@ViewBag.Search" placeholder="Search by name or description" />
    <button type="submit">Search</button>
</form>

<table class="management-table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" alt="@product.Name" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br>
<a asp-controller="CoffeeShopAdmin" asp-action="Index" class="back-button">⬅ Back</a>