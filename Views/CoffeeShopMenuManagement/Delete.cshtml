@model CoffeeShopWeb.Models.Product
<h2>Delete Product</h2>
@if (TempData["Error"] != null)
{
    <div class="error" style="color: red;">@TempData["Error"]</div>
}
<div>Are you sure you want to delete "@Model.Name"? This action cannot be undone.</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" name="decision" value="Yes">Yes</button>
    <button type="submit" name="decision" value="No">No</button>
</form>

<a asp-controller="CoffeeShopAdmin" asp-action="Index" class="back-button">quay về</a>
