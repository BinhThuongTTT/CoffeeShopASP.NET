@model CoffeeShopWeb.Models.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/add&delete.css" />

<h2>Create Product</h2>


@if (TempData["Success"] != null)
{
    <div class="success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div><label>Name</label><input asp-for="Name" required /></div>
    <div><label>Price</label><input asp-for="Price" type="number" step="0.01" required /></div>
    <div><label>Description</label><textarea asp-for="Description"></textarea></div>
    <div><label>Image</label><input type="file" name="image" /></div>
    <div>
        <label>Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" required></select>
    </div>
    <div><label><input asp-for="IsAvailable" type="checkbox" /> Available</label></div>
    <button type="submit">Create</button>
</form>
<br>

<a asp-controller="CoffeeShopMenuManagement" asp-action="Index" class="back-button">⬅ Back</a>
