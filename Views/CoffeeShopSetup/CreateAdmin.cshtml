@{
    ViewData["Title"] = "Create Admin User";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coffee Shop</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #8B4513 0%, #A0522D 50%, #D2691E 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .setup-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .setup-header {
            background: linear-gradient(135deg, #8B4513, #A0522D);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

        .setup-header i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .setup-header h1 {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .setup-header p {
            font-size: 1.4rem;
            opacity: 0.9;
        }

        .setup-form {
            padding: 3rem 2rem;
        }

        .alert {
            padding: 1rem 1.5rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            font-weight: 500;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .form-group {
            margin-bottom: 2rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.8rem;
            font-size: 1.4rem;
        }

        .form-input {
            width: 100%;
            padding: 1.2rem 1.5rem;
            border: 2px solid #e1e5e9;
            border-radius: 10px;
            font-size: 1.4rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

        .form-input:focus {
            outline: none;
            border-color: #8B4513;
            background: white;
            box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
        }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            font-size: 1.4rem;
            transition: color 0.3s;
        }

        .password-toggle:hover {
            color: #8B4513;
        }

        .btn-create {
            width: 100%;
            background: linear-gradient(135deg, #8B4513, #A0522D);
            color: white;
            padding: 1.5rem;
            border: none;
            border-radius: 10px;
            font-size: 1.6rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

        .btn-create:hover {
            background: linear-gradient(135deg, #A0522D, #D2691E);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 69, 19, 0.3);
        }

        .btn-create:active {
            transform: translateY(0);
        }

        .login-link {
            text-align: center;
            padding-top: 1.5rem;
            border-top: 1px solid #e1e5e9;
        }

        .login-link a {
            color: #8B4513;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

        .login-link a:hover {
            color: #A0522D;
            text-decoration: underline;
        }

        .password-requirements {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1rem;
            font-size: 1.2rem;
            color: #6c757d;
        }

        .password-requirements ul {
            margin: 0.5rem 0 0 1.5rem;
        }

        .password-requirements li {
            margin-bottom: 0.3rem;
        }

        @@media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .setup-header {
                padding: 2rem 1.5rem;
            }

            .setup-header h1 {
                font-size: 2rem;
            }

            .setup-form {
                padding: 2rem 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="setup-container">
        <div class="setup-header">
            <i class="fas fa-user-shield"></i>
            <h1>Tạo Admin User</h1>
            <p>Thiết lập tài khoản quản trị viên đầu tiên</p>
        </div>

        <div class="setup-form">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @TempData["Error"]
                </div>
            }

            <form asp-action="CreateAdmin" method="post" id="adminForm">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope"></i> Email
                    </label>
                    <input name="email" type="email" class="form-input" placeholder="admin@coffeeshop.com" required />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-lock"></i> Mật khẩu
                    </label>
                    <div class="password-container">
                        <input name="password" type="password" class="form-input" id="password" placeholder="Nhập mật khẩu mạnh" required minlength="6" />
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                    <div class="password-requirements">
                        <strong>Yêu cầu mật khẩu:</strong>
                        <ul>
                            <li>Ít nhất 6 ký tự</li>
                            <li>Nên có chữ hoa, chữ thường</li>
                            <li>Nên có số và ký tự đặc biệt</li>
                        </ul>
                    </div>
                </div>

                <button type="submit" class="btn-create">
                    <i class="fas fa-user-plus"></i> Tạo Admin User
                </button>
            </form>

            <div class="login-link">
                <p>Đã có tài khoản? <a asp-controller="CoffeeShopAccount" asp-action="Login">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'fas fa-eye';
            }
        }

        // Form validation
        document.getElementById('adminForm').addEventListener('submit', function(e) {
            const email = document.querySelector('input[name="email"]').value;
            const password = document.querySelector('input[name="password"]').value;

            if (!email || !password) {
                e.preventDefault();
                alert('Vui lòng điền đầy đủ thông tin!');
                return;
            }

            if (password.length < 6) {
                e.preventDefault();
                alert('Mật khẩu phải có ít nhất 6 ký tự!');
                return;
            }

            // Show loading state
            const submitBtn = document.querySelector('.btn-create');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang tạo...';
            submitBtn.disabled = true;
        });
    </script>
</body>
</html>