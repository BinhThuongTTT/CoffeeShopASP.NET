@model IEnumerable<CoffeeShopWeb.Models.Product>
@using CoffeeShopWeb.Models

<h2>POS - Staff</h2>
<div style="display:flex; gap:20px;">
    <div style="flex:2;">
        <h3>Products</h3>
        <table>
            <thead><tr><th>Name</th><th>Price</th><th>Action</th></tr></thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Price.ToString("C")</td>
                        <td>
                            <form asp-action="AddToCart" method="post" style="display:inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@p.Id" />
                                <input type="number" name="quantity" value="1" min="1" style="width:60px" />
                                <button type="submit">Add</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="flex:1; border-left:1px solid #444; padding-left:16px;">
        <h3>Cart</h3>
        @await Html.PartialAsync("_CartPartial")
    </div>
</div>
