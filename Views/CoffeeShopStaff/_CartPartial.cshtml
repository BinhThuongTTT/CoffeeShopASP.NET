@using CoffeeShopWeb.Models
@inject CoffeeShopWeb.Services.IStaffBillingService BillingService
<link rel="stylesheet" href="~/css/StaffStyle/_CartPartial.css" />

@{
    var cart = await BillingService.GetCartAsync(Context.Session);
}

@if (cart == null || !cart.Any())
{
    <div>Cart is empty</div>
}
else
{
    <table>
        <thead><tr><th>Name</th><th>Qty</th><th>Price</th><th>Total</th><th></th></tr></thead>
        <tbody>
            @foreach (var item in cart)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <form asp-action="UpdateCartItem" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="0" style="width:60px; display:block" />
                            <br />
                            <br />
                            <button type="submit">Update</button>
                        </form>
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.LineTotal.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveCartItem" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="cart-summary">
        <div class="total-amount">
            <strong>Tổng cộng: @cart.Sum(i => i.LineTotal).ToString("C", new System.Globalization.CultureInfo("vi-VN"))</strong>
        </div>

        <div class="cart-actions">
            <form asp-action="ClearCart" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-clear" onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?')">
                    <i class="fas fa-trash"></i> Xóa tất cả
                </button>
            </form>

            <form asp-action="Checkout" method="get" style="display: inline;">
                <button type="submit" class="btn-checkout">
                    <i class="fas fa-credit-card"></i> Thanh toán
                </button>
            </form>
        </div>
    </div>
}
