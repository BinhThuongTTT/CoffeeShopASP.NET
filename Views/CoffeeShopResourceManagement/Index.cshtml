@model IEnumerable<CoffeeShopWeb.Models.Resource>

<h2>Resources</h2>

@if (TempData["Success"] != null)
{
    <div>@TempData["Success"]</div>
}

<a asp-action="Create">Create New Resource</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Unit</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="CoffeeShopAdmin" asp-action="Index" class="back-button">quay về</a>
