@model List<CoffeeShopWeb.Models.Resource>

<link rel="stylesheet" href="~/css/St&MngProd&Res.css" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Resource Management</h2>

@if (TempData != null && TempData["Success"] != null)
{
    <div class="toast success">@TempData["Success"]</div>
}
<a asp-action="Create" class="add-button">+ Add Resource</a>

<form asp-action="Search" method="get" class="search">
    <input name="search" value="@ViewBag.Search" placeholder="Search by name or description" />
    <button type="submit">Search</button>
</form>

<table class="management-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resource in Model)
        {
            <tr>
                <td>@resource.Name</td>
                <td>@resource.Quantity</td>
                <td>@resource.Unit</td>
                <td>@(resource.Category?.Name ?? "None")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@resource.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@resource.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br>
<a asp-controller="CoffeeShopAdmin" asp-action="Index" class="back-button">⬅ Back</a>