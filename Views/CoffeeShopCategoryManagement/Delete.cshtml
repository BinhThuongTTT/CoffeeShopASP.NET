@model CoffeeShopWeb.Models.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="delete-container">
    <div class="delete-header">
        <h2><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa danh mục</h2>
        <a asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="delete-content">
        <div class="warning-box">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>
            <p>Hành động này không thể hoàn tác!</p>
        </div>

        <div class="category-info">
            <h4><i class="fas fa-info-circle"></i> Thông tin danh mục</h4>
            <div class="info-grid">
                <div class="info-item">
                    <label><i class="fas fa-hashtag"></i> ID:</label>
                    <span>@Model.Id</span>
                </div>
                <div class="info-item">
                    <label><i class="fas fa-tag"></i> Tên danh mục:</label>
                    <span>@Model.Name</span>
                </div>
                <div class="info-item">
                    <label><i class="fas fa-box"></i> Số sản phẩm:</label>
                    <span class="product-count">@ViewBag.ProductCount sản phẩm</span>
                </div>
            </div>
        </div>

        @if (ViewBag.ProductCount > 0)
        {
            <div class="error-box">
                <i class="fas fa-times-circle"></i>
                <h4>Không thể xóa danh mục</h4>
                <p>Danh mục này đang được sử dụng bởi <strong>@ViewBag.ProductCount</strong> sản phẩm. Vui lòng xóa hoặc chuyển các sản phẩm sang danh mục khác trước khi xóa danh mục này.</p>
            </div>
            
            <div class="form-actions">
                <a asp-action="Index" class="btn-cancel">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <a asp-controller="CoffeeShopMenuManagement" asp-action="Index" class="btn-manage">
                    <i class="fas fa-cogs"></i> Quản lý sản phẩm
                </a>
            </div>
        }
        else
        {
            <div class="success-box">
                <i class="fas fa-check-circle"></i>
                <p>Danh mục này không có sản phẩm nào. Bạn có thể xóa an toàn.</p>
            </div>
            
            <form asp-action="Delete" method="post" class="delete-form">
                <input type="hidden" asp-for="Id" />
                <div class="form-actions">
                    <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?')">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn-cancel">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        }
    </div>
</div>

<style>
.delete-container {
    max-width: 70rem;
    margin: 0 auto;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    overflow: hidden;
}

.delete-header {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

