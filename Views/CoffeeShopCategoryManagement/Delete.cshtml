    margin-bottom: 1rem;
}

.error-box p {
    color: #721c24;
}

.success-box {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 0.5rem;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: center;
}

.success-box i {
    font-size: 3rem;
    color: #155724;
    margin-bottom: 1rem;
}

.success-box p {
    color: #155724;
    font-weight: 500;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 3rem;
    flex-wrap: wrap;
}

.btn-delete {
    background: #dc3545;
    color: white;
    padding: 1.2rem 2.5rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-delete:hover {
    background: #c82333;
    transform: translateY(-2px);
}

.btn-cancel {
    background: #6c757d;
    color: white;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    font-weight: 600;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-cancel:hover {
    background: #5a6268;
    transform: translateY(-2px);
}

.btn-manage {
    background: #17a2b8;
    color: white;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    font-weight: 600;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-manage:hover {
    background: #138496;
    transform: translateY(-2px);
}

@@media (max-width: 768px) {
    .delete-container {
        margin: 1rem;
    }
    
    .delete-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .delete-content {
        padding: 2rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style>
