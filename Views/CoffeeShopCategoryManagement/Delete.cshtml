    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-back:hover {
    background: rgba(255,255,255,0.3);
    transform: translateY(-2px);
}

.delete-content {
    padding: 3rem;
}

.warning-box {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 0.5rem;
    padding: 2rem;
    text-align: center;
    margin-bottom: 3rem;
}

.warning-box i {
    font-size: 4rem;
    color: #856404;
    margin-bottom: 1rem;
}

.warning-box h3 {
    color: #856404;
    margin-bottom: 1rem;
}

.warning-box p {
    color: #856404;
    font-weight: 500;
}

.category-info {
    background: #f8f9fa;
    border-radius: 0.5rem;
    padding: 2rem;
    margin-bottom: 2rem;
}

.category-info h4 {
    color: #495057;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.info-grid {
    display: grid;
    gap: 1rem;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: white;
    border-radius: 0.5rem;
    border: 1px solid #dee2e6;
}

.info-item label {
    font-weight: 600;
    color: #495057;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.info-item span {
    color: #6c757d;
}

.product-count {
    background: #e9ecef;
    padding: 0.3rem 0.8rem;
    border-radius: 1rem;
