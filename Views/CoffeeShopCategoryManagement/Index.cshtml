@model List<CoffeeShopWeb.Models.Category>

<link rel="stylesheet" href="~/css/St&MngProd&Res.css" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Category Management</h2>

@if (TempData != null && TempData["Success"] != null)
{
    <div class="toast success">@TempData["Success"]</div>
}

@if (TempData != null && TempData["Error"] != null)
{
    <div class="toast error">@TempData["Error"]</div>
}

<form asp-action="Search" method="get" class="search">
    <input name="search" value="@ViewBag.Search" placeholder="Search by name or description" />
    <button type="submit">Search</button>
</form>

<a asp-action="Create" class="add-button">+ Add Category</a>

@if (Model != null && Model.Any())
{
    <table class="management-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories found.</p>
}

