@model List<CoffeeShopWeb.Models.Category>

<link rel="stylesheet" href="~/css/St&MngProd&Res.css" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-tags"></i> Quản lý Danh mục</h2>

@if (TempData["Success"] != null)
{
    <div class="toast success">
        <i class="fas fa-check-circle"></i>
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="toast error">
        <i class="fas fa-exclamation-circle"></i>
        @TempData["Error"]
    </div>
}

<!-- Search Form -->
<div class="search-section">
    <form asp-action="Index" method="get" class="search-form">
        <div class="search-input-group">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm kiếm danh mục..." class="search-input" />
            <button type="submit" class="search-btn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
    
    <a asp-action="Create" class="add-btn">
        <i class="fas fa-plus"></i> Thêm danh mục mới
    </a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Search))
{
    <div class="search-results">
        <p>Tìm thấy <strong>@Model.Count</strong> danh mục cho từ khóa "<strong>@ViewBag.Search</strong>"</p>
        <a asp-action="Index" class="clear-search">Xem tất cả</a>
    </div>
}

<!-- Categories Table -->
<div class="table-container">
    @if (Model.Any())
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag"></i> ID</th>
                    <th><i class="fas fa-tag"></i> Tên danh mục</th>
                    <th><i class="fas fa-box"></i> Số sản phẩm</th>
                    <th><i class="fas fa-calendar"></i> Ngày tạo</th>
                    <th><i class="fas fa-cogs"></i> Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>
                            <div class="category-name">
                                <i class="fas fa-folder"></i>
                                @category.Name
                            </div>
                        </td>
                        <td>
                            <span class="product-count">
                                @{
                                    var productCount = ViewContext.HttpContext.RequestServices
                                        .GetService<CoffeeShopWeb.Models.Context>()
                                        .Products.Count(p => p.CategoryId == category.Id);
                                }
                                @productCount sản phẩm
                            </span>
                        </td>
                        <td>
                            <span class="date-created">
                                <i class="fas fa-clock"></i>
                                Chưa có thông tin
                            </span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn-edit" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn-delete" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data">
            <i class="fas fa-folder-open"></i>
            <h3>Không có danh mục nào</h3>
            <p>@(string.IsNullOrEmpty(ViewBag.Search) ? "Chưa có danh mục nào được tạo." : "Không tìm thấy danh mục nào phù hợp.")</p>
            @if (string.IsNullOrEmpty(ViewBag.Search))
            {
                <a asp-action="Create" class="btn-primary">
                    <i class="fas fa-plus"></i> Tạo danh mục đầu tiên
                </a>
            }
        </div>
    }
</div>

<style>
.toast {
    padding: 1rem 1.5rem;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 500;
}

.toast.success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.toast.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.search-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    gap: 2rem;
}

.search-form {
    flex: 1;
    max-width: 40rem;
}

.search-input-group {
    display: flex;
    border: 2px solid #ddd;
    border-radius: 0.5rem;
    overflow: hidden;
}

.search-input {
    flex: 1;
    padding: 1rem;
    border: none;
    outline: none;
    font-size: 1.4rem;
}

.search-btn {
    background: #8B4513;
    color: white;
    border: none;
    padding: 1rem 1.5rem;
    cursor: pointer;
    transition: background 0.3s;
}

.search-btn:hover {
    background: #A0522D;
}

.add-btn {
    background: #28a745;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.add-btn:hover {
    background: #218838;
    transform: translateY(-2px);
}

.search-results {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border-left: 4px solid #8B4513;
}

.clear-search {
    color: #8B4513;
    text-decoration: underline;
    margin-left: 1rem;
}

.category-name {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
}

.product-count {
    background: #e9ecef;
    padding: 0.3rem 0.8rem;
    border-radius: 1rem;
    font-size: 1.2rem;
    color: #495057;
}

.date-created {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6c757d;
    font-size: 1.2rem;
}

.action-buttons {
    display: flex;
    gap: 0.5rem;
}

.btn-edit, .btn-delete {
    padding: 0.5rem;
    border-radius: 0.3rem;
    text-decoration: none;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
}

.btn-edit {
    background: #ffc107;
    color: #212529;
}

.btn-edit:hover {
    background: #e0a800;
    transform: scale(1.1);
}

.btn-delete {
    background: #dc3545;
    color: white;
}

.btn-delete:hover {
    background: #c82333;
    transform: scale(1.1);
}

.no-data {
    text-align: center;
    padding: 4rem 2rem;
    color: #6c757d;
}

.no-data i {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #dee2e6;
}

.no-data h3 {
    margin-bottom: 1rem;
    color: #495057;
}

.btn-primary {
    background: #8B4513;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    transition: all 0.3s;
}

.btn-primary:hover {
    background: #A0522D;
    transform: translateY(-2px);
}
</style>
