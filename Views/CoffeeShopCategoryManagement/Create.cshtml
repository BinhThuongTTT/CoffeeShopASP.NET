@model CoffeeShopWeb.Models.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/St&MngCr&RsPass.css" />

<div class="form-container">
    <div class="form-header">
        <h2><i class="fas fa-plus-circle"></i> Thêm danh mục mới</h2>
        <a asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="Create" method="post" class="category-form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        
        <div class="form-group">
            <label asp-for="Name" class="form-label">
                <i class="fas fa-tag"></i> Tên danh mục
            </label>
            <input asp-for="Name" class="form-input" placeholder="Nhập tên danh mục..." />
            <span asp-validation-for="Name" class="validation-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Lưu danh mục
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-times"></i> Hủy bỏ
            </a>
        </div>
    </form>
</div>

<style>
.form-container {
    max-width: 60rem;
    margin: 0 auto;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    overflow: hidden;
}

.form-header {
    background: linear-gradient(135deg, #8B4513, #A0522D);
    color: white;
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.form-header h2 {
    margin: 0;
    font-size: 2.2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.btn-back {
    background: rgba(255,255,255,0.2);
    color: white;
    padding: 1rem 1.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-back:hover {
    background: rgba(255,255,255,0.3);
    transform: translateY(-2px);
}

.category-form {
    padding: 3rem;
}

.validation-summary {
    background: #f8d7da;
    color: #721c24;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border: 1px solid #f5c6cb;
}

.form-group {
    margin-bottom: 2.5rem;
}

.form-label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.8rem;
    font-size: 1.4rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-input {
    width: 100%;
    padding: 1.2rem;
    border: 2px solid #ddd;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    transition: all 0.3s;
    background: #f8f9fa;
}

.form-input:focus {
    outline: none;
    border-color: #8B4513;
    background: white;
    box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
}

.validation-error {
    color: #dc3545;
    font-size: 1.2rem;
    margin-top: 0.5rem;
    display: block;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
}

.btn-submit {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    padding: 1.2rem 2.5rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-submit:hover {
    background: linear-gradient(135deg, #218838, #1ea080);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
}

.btn-cancel {
    background: #6c757d;
    color: white;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 1.4rem;
    font-weight: 600;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-cancel:hover {
    background: #5a6268;
    transform: translateY(-2px);
}

@@media (max-width: 768px) {
    .form-container {
        margin: 1rem;
    }
    
    .form-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .category-form {
        padding: 2rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
