@model CoffeeShopWeb.Models.Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/add&delete.css" />

<h2>Create Category</h2>

@if (TempData["Success"] != null)
{
    <div class="success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" placeholder="Nhập tên danh mục..." required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit">Create</button>
</form>

<br>
<a asp-controller="CoffeeShopCategoryManagement" asp-action="Index" class="back-button">⬅ Back</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
