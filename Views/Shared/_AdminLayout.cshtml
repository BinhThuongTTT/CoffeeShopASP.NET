@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/admin.css">
<link rel="stylesheet" href="~/css/tabs.css" asp-append-version="true" />

<div class="admin-container">
    <!-- Sidebar -->
    <div class="admin-sidebar">
        <h2>Admin</h2>
        <ul>
            <li><a asp-controller="CoffeeShopMenuManagement" asp-action="Index"><i class="fas fa-utensils"></i> Manage Menu</a></li>
            <li><a asp-controller="CoffeeShopCategoryManagement" asp-action="Index"><i class="fas fa-tags"></i> Manage Categories</a></li>
            <li><a asp-controller="CoffeeShopResourceManagement" asp-action="Index"><i class="fas fa-boxes"></i> Manage Resource</a></li>
            <li><a asp-controller="CoffeeShopStaffManagement" asp-action="Index"><i class="fas fa-users"></i> Manage Staff</a></li>
            <li><a asp-controller="CoffeeShopManagerManagement" asp-action="Index"><i class="fas fa-user-tie"></i> Manage Managers</a></li>
            <li><a asp-controller="CoffeeShopAccount" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        </ul>
    </div>

    <!-- Main content -->
    <div class="admin-content">
        @RenderBody()
    </div>
</div>
